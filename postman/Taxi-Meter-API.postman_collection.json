{
  "info": {
    "name": "Taxi Meter API - Driver Profile Management",
    "description": "Complete API collection for testing driver authentication and profile management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "taxi-meter-api"
  },
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Database Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health/db",
              "host": ["{{base_url}}"],
              "path": ["health", "db"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Driver Authentication",
      "item": [
        {
          "name": "Driver Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Save JWT token for subsequent requests",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('driver_token', response.access_token);",
                  "    console.log('Driver token saved:', response.access_token);",
                  "} else {",
                  "    console.log('Login failed:', pm.response.text());",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"driver@demo.com\",\n  \"password\": \"DriverPass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/driver/login",
              "host": ["{{base_url}}"],
              "path": ["api", "driver", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Driver Profile Management",
      "item": [
        {
          "name": "Get Driver Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{driver_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/driver/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "driver", "profile"]
            }
          },
          "response": []
        },
        {
          "name": "Update Driver Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{driver_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+1-555-0123\",\n  \"address\": \"123 Updated Street, New City, NY 10001\",\n  \"emergencyContact\": \"Jane Doe - +1-555-0199\",\n  \"vehicleInfo\": {\n    \"make\": \"Toyota\",\n    \"model\": \"Camry Hybrid\",\n    \"year\": 2023,\n    \"licensePlate\": \"NYC-2023\",\n    \"color\": \"Silver\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/driver/profile/edit",
              "host": ["{{base_url}}"],
              "path": ["api", "driver", "profile", "edit"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Regular User Authentication (for comparison)",
      "item": [
        {
          "name": "User Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@demo.com\",\n  \"password\": \"UserPass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "driver_token",
      "value": "",
      "type": "string"
    }
  ]
}
