              "host": ["{{base_url}}"],
              "path": ["admin", "reports", "summary"],
              "query": [
                {
                  "key": "from",
                  "value": "{{seven_days_ago}}"
                },
                {
                  "key": "to",
                  "value": "{{today}}"
                },
                {
                  "key": "granularity",
                  "value": "daily"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Monthly Payment Methods Breakdown",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/reports/payment-methods?from={{month_start}}&to={{month_end}}&granularity=monthly",
              "host": ["{{base_url}}"],
              "path": ["admin", "reports", "payment-methods"],
              "query": [
                {
                  "key": "from",
                  "value": "{{month_start}}"
                },
                {
                  "key": "to",
                  "value": "{{month_end}}"
                },
                {
                  "key": "granularity",
                  "value": "monthly"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Specific Driver Performance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/reports/driver-performance?from={{start_date}}&to={{end_date}}&driverId={{specific_driver_id}}&granularity=daily",
              "host": ["{{base_url}}"],
              "path": ["admin", "reports", "driver-performance"],
              "query": [
                {
                  "key": "from",
                  "value": "{{start_date}}"
                },
                {
                  "key": "to",
                  "value": "{{end_date}}"
                },
                {
                  "key": "driverId",
                  "value": "{{specific_driver_id}}",
                  "description": "Filter by specific driver UUID"
                },
                {
                  "key": "granularity",
                  "value": "daily"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set dynamic date variables for testing",
          "const now = new Date();",
          "const today = now.toISOString();",
          "const sevenDaysAgo = new Date(now.getTime() - 7 * 24 * 60 * 60 * 1000).toISOString();",
          "const thirtyDaysAgo = new Date(now.getTime() - 30 * 24 * 60 * 60 * 1000).toISOString();",
          "",
          "// Month boundaries",
          "const monthStart = new Date(now.getFullYear(), now.getMonth(), 1).toISOString();",
          "const monthEnd = new Date(now.getFullYear(), now.getMonth() + 1, 0, 23, 59, 59).toISOString();",
          "",
          "// Set collection variables",
          "pm.collectionVariables.set('today', today);",
          "pm.collectionVariables.set('seven_days_ago', sevenDaysAgo);",
          "pm.collectionVariables.set('thirty_days_ago', thirtyDaysAgo);",
          "pm.collectionVariables.set('month_start', monthStart);",
          "pm.collectionVariables.set('month_end', monthEnd);",
          "",
          "// Use thirty days ago as default start date",
          "pm.collectionVariables.set('start_date', thirtyDaysAgo);",
          "pm.collectionVariables.set('end_date', today);"
        ]
      }
    }
  ],
