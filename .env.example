# Stripe OAuth Configuration
# Get these values from your Stripe Dashboard > Settings > Connect > OAuth settings

# Your Stripe Secret Key (starts with sk_)
STRIPE_SECRET_KEY=sk_test_...

# Your Stripe Publishable Key (starts with pk_)
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Your Stripe Connect Client ID (starts with ca_)
STRIPE_CLIENT_ID=ca_...

# OAuth Redirect URI - must match exactly what you configure in Stripe Dashboard
# Example: https://yourdomain.com/stripe/connect/callback
STRIPE_REDIRECT_URI=http://localhost:5173/stripe/callback

# Webhook endpoint secret (starts with whsec_) - for future webhook implementation
STRIPE_WEBHOOK_SECRET=whsec_...

# Encryption key for storing Stripe tokens securely
# Generate a strong random key - use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Database Configuration (if not already configured)
DATABASE_URL="postgresql://username:password@localhost:5432/taxi_meter_db?schema=public"

# JWT Configuration (if not already configured)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
